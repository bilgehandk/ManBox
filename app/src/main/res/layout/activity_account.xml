<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button13"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Button" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="ManBox"
            android:textAlignment="center"
            android:textSize="34sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="363dp"
        android:layout_height="36dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="5dp"
        android:background="#00D0D2D6"
        android:text="Hesabım"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:text="Profil Bilgilerim"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textEnd"
            app:iconSize="32dp" />

        <Button
            android:id="@+id/button15"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:text="Üyeliklerim"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textEnd"
            app:iconSize="32dp" />

        <Button
            android:id="@+id/button16"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:text="Ölçümlerim"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textEnd"
            app:iconSize="32dp" />

        <Button
            android:id="@+id/button17"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:text="Hesabım"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textEnd"
            app:iconSize="32dp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:text="Bakiye"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textEnd"
            app:iconSize="32dp" />

        <Button
            android:id="@+id/button19"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:text="Rezervasyonlarım"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textEnd"
            app:iconSize="32dp" />

        <Button
            android:id="@+id/button20"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:text="Şifremi Değiştir"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textEnd"
            app:iconSize="32dp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:text="Üyeliğimi Sil"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textEnd"
            app:iconSize="32dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
